@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Template 1</title>
    <link href="~/libs/lib.css" rel="stylesheet" />
    <link href="~/libs/rlib.css" rel="stylesheet" />
    <script src="~/libs/jquery.js"></script>
    <script src="~/libs/lib.js"></script>
    <link href="~/libs/css/style.css" rel="stylesheet" />
    <link href="~/libs/css/darkmode.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            background-image: url('../../libs/assets/light-trails-buildings.jpg');
        }
        .login-layout {
            width:100%;
            max-width:500px;
            padding:15px;
            border-radius:0.5rem;
            background:rgba(255,255,255,0.8);
        }
        .r-form-item.focus input ~ label {
            border:1px solid #004dd1;
            box-shadow:#004dd1 0px 0px 3px;
            border-radius:0.2rem;
        }
    </style>
</head>
<body>
    <div class="login-layout">
        <form>
            <div class="r-form-item">
                <input />
                <label>Username</label>
            </div>
            <div class="r-form-item">
                <input />
                <label>Password</label>
            </div>
            <div class="row mt-3">
                <div class="col-lg-12 text-center">
                    <button class="rbtn rbtn-success">Login</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
