<div class="content-header">
    <div class="row">
        <div class="col-lg-4">
            <h4>USER TABLE</h4>
        </div>
        <div class="col-lg-4 d-flex justify-content-center">
            <b>TOTAL: 10</b>
        </div>
        <div class="col-lg-4 tool-bar d-flex justify-content-end align-items-center">
            <div class="amount-row-selection">
                <div class="r-form-item m-0">
                    <select>
                        <option value="5">5</option>
                        <option value="10" selected>10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <label>Row amount</label>
                </div>
            </div>
            <i class="fas fa-plus icon" onclick="RModalShow('@Url.Action("Update", "User")')"></i>
            <i class="fas fa-search icon" onclick="OpenSidebar('@Url.Action("Search", "User")')"></i>
        </div>
    </div>
</div>
<table class="r-table-1">
    <thead>
        <tr>
            <th width="80">INDEX</th>
            <th>USERNAME</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>ADDRESS</th>
            <th width="150">ACTION</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < 30;i++)
            {
                <tr>
                    <td class="text-center">@(i+1)</td>
                    <td>username@(i+1)</td>
                    <td class="text-center">email@(i+1)@@gmail.com</td>
                    <td class="text-center">09@(i)254179</td>
                    <td>address@(i+1)</td>
                    <td class="text-center">
                        <button class="rbtn rbtn-warning"><i class="fas fa-pen"></i></button>
                        <button class="rbtn rbtn-danger"><i class="fas fa-trash-alt"></i></button>
                        <button class="rbtn rbtn-secondary"><i class="fas fa-lock"></i></button>
                    </td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="99">
                <div class="page-nav-wrapper">
                    <div class="page-nav">
                        <div class="nav-btn"><i class="fas fa-angle-double-left icon"></i></div>
                        <div class="nav-btn"><i class="fas fa-angle-left icon"></i></div>
                        <div class="nav-input"><input value="1" /> / <span>1</span></div>
                        <div class="nav-btn"><i class="fas fa-angle-right icon"></i></div>
                        <div class="nav-btn"><i class="fas fa-angle-double-right icon"></i></div>
                    </div>
                </div>
            </td>
        </tr>
    </tfoot>
</table>
<script>
    rActive = "user"
</script>
